<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_margin="5dp"
    android:layout_height="match_parent"
    tools:context=".UploadPrescription">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textStyle="italic"
        android:text="Uploading Prescription\nto"
        android:textSize="25dp"
        android:layout_gravity="center_horizontal"
        android:layout_margin="10dp"
        />

    <TextView
        android:id="@+id/txtShopNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textColor="#000"
        android:text="Shop Number : 1001"
        android:textSize="28dp"
        android:layout_gravity="center_horizontal"
        android:layout_margin="1dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="You will be notified by the store once your order is ready alongwith the bill."
        android:textSize="25dp"
        android:layout_gravity="center_horizontal"
        android:layout_margin="15dp"
        />


    <ImageView
        android:id="@+id/imgprescrip"
        android:layout_width="250dp"
        android:src="@drawable/info"
        android:layout_height="250dp"
        android:layout_gravity="center_horizontal"
        android:layout_margin="10dp"
        />
    <Button
        android:id="@+id/btnUpload"
        android:layout_margin="10dp"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:background="#000"
        android:textColor="#fff"
        android:text="Upload Prescription" />

    <Button
        android:id="@+id/btnconfirmUpload"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Submit to store"
        android:background="#ff0000"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:textColor="#fff"
        android:textSize="18dp"
        android:layout_gravity="bottom"/>

</LinearLayout>