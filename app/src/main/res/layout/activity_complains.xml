<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="10dp"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Complains">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Complain Category:"
        android:textSize="20dp"
        android:textColor="#000"
        android:layout_margin="5dp"/>
    <Spinner
        android:id="@+id/spinner"
        android:layout_width="match_parent"
        android:layout_margin="5dp"
        android:layout_height="50dp"></Spinner>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your complain:"
        android:textSize="20dp"
        android:textColor="#000"
        android:layout_margin="5dp"/>
    <EditText
        android:id="@+id/edtcomplain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:hint="Write your\ncomplain in\nabout hundred words or less"/>
   <Button
       android:id="@+id/btnSubmit"
       android:layout_width="100dp"
       android:layout_height="30dp"
       android:background="#000"
       android:layout_margin="5dp"
       android:textColor="#fff"
       android:text="Submit"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My Complains:"
        android:textStyle="italic"
        android:textSize="25dp"
        android:textColor="#000"
        android:layout_margin="5dp"/>
    <ListView
        android:id="@+id/complainlistview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:padding="5dp"
        ></ListView>


</LinearLayout>