<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".DiseasePrediction">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:text="Suffering from cold,cramps or anything else."/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:text="Not sure whom to consult ?"
        />
    <TextView
        android:layout_width="match_parent"
        android:textSize="25dp"
        android:textColor="#98afc7"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Here we are to the rescue. "
        />
    <ImageView
        android:layout_width="300dp"
        android:layout_gravity="center"
        android:layout_height="150dp"
        android:src="@drawable/diseaselogo"/>
    <TextView
        android:layout_width="match_parent"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:textSize="15dp"
        android:layout_margin="10dp"
        android:text="Our well trained machine learning
algorithms will help you to find the possible reasons for your symptoms. Just give us a few symptoms and we will provide you with the
most accurate solution."/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:textColor="#00ff00"
        android:text="Let us Know your 5 symptoms :"/>
    <Spinner
        android:id="@+id/spinner1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:padding="2dp"/>
    <Spinner
        android:id="@+id/spinner2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:padding="2dp"/>
    <Spinner
        android:id="@+id/spinner3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:padding="2dp"/>
    <Spinner
        android:id="@+id/spinner4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:padding="2dp"/>
    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spinner5"
        android:layout_margin="10dp"
        android:padding="2dp"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#fff"
        android:background="#98afc7"
        android:id="@+id/btndetect"
        android:layout_margin="10dp"
        android:textSize="20dp"
        android:text="Detect"/>
    </LinearLayout>
</ScrollView>