<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DashBoard">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <com.mancj.materialsearchbar.MaterialSearchBar
            style="@style/MaterialSearchBarDark"
            android:layout_margin="10dp"
            app:mt_speechMode="true"
            app:mt_hint="Prototype"
            app:mt_placeholder="Search the App"
            app:mt_maxSuggestionsCount="10"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:elevation="5dp"
            app:mt_navIconEnabled="true"
            android:id="@+id/searchBar" />

        <RelativeLayout
            android:layout_margin="10dp"
            android:background="#fff"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txtDashboard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="22dp"
                android:textStyle="bold"
                android:text="My Health Services"
                android:textColor="#000"/>
            <TextView
                android:layout_marginTop="6dp"
                android:layout_below="@id/txtDashboard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:textStyle="italic"
                android:text="Doctors, Hospitals, Tests and much more..."
                android:textColor="#808080"/>
            <ImageView
                android:layout_alignParentRight="true"
                android:layout_width="62dp"
                android:layout_height="62dp"
                android:src="@drawable/personlogo"/>
        </RelativeLayout>


        <GridLayout
            android:layout_width="match_parent"
            android:columnOrderPreserved="false"
            android:alignmentMode="alignMargins"
            android:columnCount="2"
            android:rowCount="3"
            android:layout_height="wrap_content">
            <android.support.v7.widget.CardView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_margin="12dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="6dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="16dp"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="93dp"
                        android:onClick="gotodoctors"
                        android:src="@drawable/doctor" />

                    <TextView
                        android:onClick="gotodoctors"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Doctors\naround me"
                        android:textAlignment="center"
                        android:textColor="#6f6f6f"
                        android:textSize="18dp" />

                </LinearLayout>

            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_margin="12dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="6dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="16dp"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/test"/>
                    <TextView
                        android:textSize="18dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Medical\nTests"
                        android:textAlignment="center"
                        android:textColor="#6f6f6f"/>

                </LinearLayout>

            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_margin="12dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="6dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="16dp"
                    android:gravity="center">
                    <ImageView
                        android:onClick="gotohospitals"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/kendra"/>
                    <TextView
                        android:textSize="18dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:text="Hospitals\nAround"
                        android:textColor="#6f6f6f"/>

                </LinearLayout>

            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_margin="12dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="6dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="16dp"
                    android:gravity="center">
                    <ImageView
                        android:onClick="gototestimonials"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/activity"/>
                    <TextView
                        android:textSize="18dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Prescription"
                        android:textAlignment="center"
                        android:textColor="#6f6f6f"/>

                </LinearLayout>

            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_margin="12dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="6dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="16dp"
                    android:gravity="center">

                    <ImageView
                        android:onClick="gotogovt"
                        android:layout_width="70dp"
                        android:layout_height="80dp"
                        android:src="@drawable/info" />

                    <TextView
                        android:onClick="gotogovt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Govt.\nInitiatives"
                        android:textAlignment="center"
                        android:textColor="#6f6f6f"
                        android:textSize="18dp" />

                </LinearLayout>

            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_margin="12dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="6dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="16dp"
                    android:gravity="center">
                    <ImageView
                        android:onClick="gotocomplains"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/complain"/>
                    <TextView
                        android:textSize="18dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Post\nComplaint"
                        android:textAlignment="center"
                        android:textColor="#6f6f6f"/>

                </LinearLayout>

            </android.support.v7.widget.CardView>

        </GridLayout>
        <Button
            android:onClick="gotosurvey"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:background="#000"
            android:textColor="#fff"
            android:text="Survey"/>
        <Button
            android:onClick="goback"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:background="#000"
            android:textColor="#fff"
            android:text="Logout"/>
    </LinearLayout>

</ScrollView>